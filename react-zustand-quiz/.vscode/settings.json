{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "eslint.codeActionsOnSave.mode": "all",
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.run": "onSave",
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ]
}